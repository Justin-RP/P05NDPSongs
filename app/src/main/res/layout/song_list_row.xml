<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/rowIvImageView"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:maxHeight="42dp"
        android:maxWidth="42dp"
        android:scaleType="matrix"
        app:srcCompat="@drawable/ic_library_music" />

    <LinearLayout
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rowTextViewYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@android:color/holo_red_light" />

        <TextView
            android:id="@+id/rowTextViewSongTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/rowTextViewArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>

    <ImageView
        android:id="@+id/rowIV1"
        android:layout_width="30px"
        android:layout_height="50px"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/btn_star" />

    <ImageView
        android:id="@+id/rowIV2"
        android:layout_width="30px"
        android:layout_height="50px"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/btn_star" />

    <ImageView
        android:id="@+id/rowIV3"
        android:layout_width="30px"
        android:layout_height="50px"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/btn_star" />

    <ImageView
        android:id="@+id/rowIV4"
        android:layout_width="30px"
        android:layout_height="50px"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/btn_star" />

    <ImageView
        android:id="@+id/rowIV5"
        android:layout_width="30px"
        android:layout_height="50px"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/btn_star" />

</LinearLayout>
